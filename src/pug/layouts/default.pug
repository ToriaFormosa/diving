doctype html

include vars
block vars
	
include ../components/_mixins

html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description" content="")
		meta(name="keywords" content="")

		if page.isProductPage 
			each it in ['full-2.jpg', 'full-2@2x.jpg', 'full-3.jpg', 'full-3@2x.jpg', 'full-4.jpg', 'full-4@2x.jpg']
				link(rel="prefetch prerender", href="images/product-card/" + it)

		link(href="css/main.min.css" rel="stylesheet")

		title= `${page.title}`

	- let modClass = headerModClass ? ' ' + headerModClass : '';

	body(class=modClass)
		include ../partials/preloader.pug

		block header
			include ../partials/new-header

		main.main
			block main

		block footer
			include ../partials/new-footer

		block modals

		script(src="js/main.min.js")

		block scripts
