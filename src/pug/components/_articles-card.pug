mixin articles-card(item)
  div(class= item.class ? item.class + ' articles-card' : 'articles-card')
    a.articles-card__image(href= URLS.article)
      img(src="images/homepage/articles/" + item.img + ".jpg", srcset="images/homepage/articles/" + item.img + ".jpg 2x", width="397", height="246", alt="")
    .articles-card__content
      .articles-card__title!= item.title
      .articles-card__row
        +button('Подробнее', 'button--angle articles-card__more', 'arrow-angle', URLS.article)
        time.articles-card__date(datetime="2021-08-20") 20.08.2021